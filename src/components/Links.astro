---
const links = [
  { label: 'Sitio Web', url: 'https://ejemplo.com/' },
  { label: 'WhatsApp', url: 'https://github.com/' },
  { label: 'Instagram', url: 'https://twitter.com/' },
  { label: 'Tiktok', url: 'https://linkedin.com/' },
];
---

<div class="linktree-container">
  <img src="https://avatars.githubusercontent.com/u/96989277?s=240&v=4" alt="Avatar de matias lenci" class="avatar" />
  <h1>Matias Lenci</h1>
  <!-- <span class="user-name">@matias.lenci.drones</p> -->
  <p class="bio">Drone Pilot ‚Ä¢ Content Creator ‚Ä¢ Sky Explorer üöÅ</p>
  <div class="links">
    {links.map(link => (
      <a class="link" href={link.url} target="_blank" rel="noopener noreferrer">{link.label}</a>
    ))}
  </div>
</div>

<style>
.linktree-container {
  max-width: 400px;
  margin: 48px auto;
  padding: 32px 24px;
  border-radius: 24px;
  text-align: center;
  font-family: system-ui, sans-serif;
}
.avatar {
  width: 160px;
  height: 160px;
  border-radius: 50%;
  margin-bottom: 16px;
  border: 3px solid #eee;
}
h1 {
  margin: 0 0 8px 0;
  font-size: 2rem;
}
.user-name{
  color: #666;
}
.bio {
  color: #222;
  margin-bottom: 2rem;
}
.links {
  display: flex;
  flex-direction: column;
  gap: 16px;
}
.link {
  display: block;
  padding: 14px 0;
  background: #f3f4f6;
  border-radius: 12px;
  color: #222;
  text-decoration: none;
  font-weight: 500;
  transition: background 0.2s, color 0.2s;
}
.link:hover {
  background: #e0e7ef;
  color: #0077ff;
}
</style> 